doctype html
html
  head
    title SonOfStoreEngine
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  =yield :head

  body
    div class="navbar navbar-fixed-top"
      div class="navbar-inner"
        div class="container"
          ul id="nav"
            - if @store and can? :manage, @store
              li.nav = link_to("Admin", admin_dashboard_path)
            - if current_user
              - if @store
                li.nav = link_to("My Orders", orders_path(@store))
              li.nav id="right"
                = "#{current_user.name} | " 
                = link_to("Log out",
                          destroy_user_session_path(:store_unique_id => nil),
                          :method => :delete)
            - else
              li.nav id="right"
                = link_to("Sign up", new_user_path)
                = " or "
                = link_to("Log In", new_user_session_path)
            - if @store and not @store.name.blank?
              li.nav class="brand" = @store.name.titlecase

            - if @store
              li.nav = link_to "Home", products_path(@store)
              li.nav = link_to "Browse by Category", categories_path(@store)  
              li.nav = link_to "View Cart", cart_path(@store)
            - else
              li.nav class="brand" = "Konami Coders Inc."
      
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"

    div class="navbar navbar-fixed-bottom"
      div class="navbar-inner"
        div class="container"
    = yield
